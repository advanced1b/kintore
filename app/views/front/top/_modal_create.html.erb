<!-- モーダルウィンドウの本体 -->
<div id="modal_create" class="modal fade" data-backdrop="static">

    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">ユーザー情報登録</h4>
            </div>
            <%= form_for(@user, class:"form") do |f| %>

            <div class="modal-body">
                <div class="portlet-body form">
                    <div class="form-group col-xs-12">
                        <%= render 'shared/error_messages' %>
                    </div>
                    <div class="form-group col-xs-12">
                        <label class="col-xs-5 form__label">名前</label>
                        <div class="col-xs-5">
                            <%= f.text_field :name,class:'form-control', placeholder: "名前" %>
                        </div>
                    </div>
                    <div class="form-group col-xs-12">
                        <label class="col-xs-5 form__label">ログインID</label>
                        <div class="col-xs-5">
                            <%= f.text_field :login,class:'form-control', placeholder: "ログインID" %>
                        </div>
                    </div>
                    <div class="form-group col-xs-12">
                        <label class="col-xs-5 form__label">パスワード</label>
                        <div class="col-xs-5">
                            <%= f.text_field :password,class:'form-control', placeholder: "パスワード" %>
                        </div>
                    </div>
                    <div class="form-group col-xs-12">
                        <label class="col-xs-5 form__label">パスワード(確認)</label>
                        <div class="col-xs-5">
                            <%= f.text_field :password_confirmation,class:'form-control', placeholder: "パスワード(確認)" %>
                        </div>
                    </div>
                    <div class="form-group col-xs-12">
                        <label class="col-xs-5 form__label">性別</label>
                        <div class="col-xs-5">
                            <%= f.select :sex, {'男' => 1 , '女' => 2}, class:"form-control" %>
                        </div>
                    </div>
                    <div class="form-group col-xs-12">
                        <label class="col-xs-5 form__label">身長</label>
                        <div class="col-xs-5">
                            <%= f.text_field :height,class:'form-control', placeholder: "身長" %>
                        </div>
                    </div>
                    <div class="form-group col-xs-12">
                        <label class="col-xs-5 form__label">体重</label>
                        <div class="col-xs-5">
                            <%= f.text_field :weight,class:'form-control', placeholder: "体重" %>
                        </div>
                    </div>
                    <div class="form-group col-xs-12">
                        <label class="col-xs-5 form__label">トレーニング可能日程</label>
                        <div class="col-xs-5">
                            <%= f.select :term, {'週3' => 1 , '週4以上' =>2}, class: "form-control" %>
                        </div>
                    </div>
                    <div class="form-group col-xs-12">
                        <label class="col-xs-5 form__label">目的</label>
                        <div class="col-xs-5">
                            <%= f.select :body_type, {'筋力UP' => 1 , 'ダイエットor減量' =>2}, class: "form-control" %>
                        </div>
                    </div>
                    <div class="modal__footer">
                        <button type="button" data-dismiss="modal" class="btn">キャンセル</button>
                        <button type="submit" class="btn">ログイン</button>
                    </div>
                </div>
            </div>
        </div>
        <% end %>
    </div><!-- /.modal-content -->
</div><!-- /.modal-dialog -->

