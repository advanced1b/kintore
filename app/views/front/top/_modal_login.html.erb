<div id="modal_login" class="modal fade">

    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">ログイン</h4>
            </div>
            <div class="modal-body">
                <%= form_for(:session,url:login_path) do |f| %>
                <div class="form-group col-xs-12">
                    <%= render 'shared/error_messages' %>
                </div>
                <div class="form-group col-xs-12">
                    <label class="col-xs-5 form__label">ログインID</label>
                    <div class="col-xs-5">
                        <%= f.text_field :login ,class:'form-control' ,placeholder: "ログインID" %>
                    </div>
                </div>
                <div class="form-group col-xs-12">
                    <label class="col-xs-5 form__label">パスワード</label>
                    <div class="col-xs-5">
                    <%= f.password_field :password ,class:'form-control', placeholder: "パスワード" %>
                    </div>
                </div>
                <div class="modal__footer">
                    <button type="button" data-dismiss="modal" class="btn">キャンセル</button>
                    <button type="submit" class="btn">ログイン</button>
                </div>

            </div>
            <% end %>
        </div>
    </div><!-- /.modal-content -->
</div><!-- /.modal-dialog -->

</div>
